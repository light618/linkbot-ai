# LinkBot-AI 环境配置模板
# 复制此文件为 .env 并填入实际值

# ===================
# 基础配置
# ===================
NODE_ENV=development
PORT=3000
API_PORT=3001
PROXY_PORT=8080

# ===================
# 数据库配置
# ===================
# PostgreSQL (NocoBase)
DATABASE_URL=postgresql://username:password@localhost:5432/linkbot_ai
DB_HOST=localhost
DB_PORT=5432
DB_NAME=linkbot_ai
DB_USER=username
DB_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===================
# AI 引擎配置
# ===================
# Coze API
COZE_BOT_ID=your_bot_id
COZE_TOKEN=your_coze_token
COZE_API_URL=https://api.coze.com/open/v1

# OpenAI (备用)
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-4o

# ===================
# 渠道平台配置
# ===================
# 抖音开放平台
DOUYIN_CLIENT_ID=your_douyin_client_id
DOUYIN_CLIENT_SECRET=your_douyin_client_secret
DOUYIN_REDIRECT_URI=https://admin.linkbot-ai.com/auth/douyin/callback

# 快手开放平台
KUAISHOU_CLIENT_ID=your_kuaishou_client_id
KUAISHOU_CLIENT_SECRET=your_kuaishou_client_secret
KUAISHOU_REDIRECT_URI=https://admin.linkbot-ai.com/auth/kuaishou/callback

# 微信开放平台
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret
WECHAT_REDIRECT_URI=https://admin.linkbot-ai.com/auth/wechat/callback

# 小红书开放平台
XIAOHONGSHU_CLIENT_ID=your_xiaohongshu_client_id
XIAOHONGSHU_CLIENT_SECRET=your_xiaohongshu_client_secret
XIAOHONGSHU_REDIRECT_URI=https://admin.linkbot-ai.com/auth/xiaohongshu/callback

# ===================
# 安全配置
# ===================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your_encryption_key_here

# 内容安全
TENCENT_SECRET_ID=your_tencent_secret_id
TENCENT_SECRET_KEY=your_tencent_secret_key

# ===================
# 支付配置
# ===================
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# 支付宝
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key

# ===================
# 监控配置
# ===================
# UptimeRobot
UPTIMEROBOT_API_KEY=your_uptimerobot_key

# 日志
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ===================
# 邮件配置
# ===================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# ===================
# 文件存储
# ===================
# 本地存储
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# 云存储 (可选)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1
AWS_BUCKET=linkbot-ai-uploads

# ===================
# 第三方服务
# ===================
# 短信服务
SMS_PROVIDER=aliyun
SMS_ACCESS_KEY_ID=your_sms_key
SMS_ACCESS_KEY_SECRET=your_sms_secret

# 推送服务
PUSH_PROVIDER=firebase
FIREBASE_SERVER_KEY=your_firebase_key

# ===================
# 开发配置
# ===================
DEBUG=true
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

